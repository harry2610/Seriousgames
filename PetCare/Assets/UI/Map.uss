.panel {
    flex-direction: column;
    flex-wrap: nowrap;
    -unity-font: url("project://database/Assets/UI/font/Ubuntu/UbuntuNerdFont-Regular.ttf?fileID=12800000&guid=0475b4bda9ba13c41a6d1711232eb8db&type=3#UbuntuNerdFont-Regular");
    -unity-font-definition: url("project://database/Assets/UI/font/Ubuntu/UbuntuNerdFont-Regular%20SDF.asset?fileID=11400000&guid=f1fcbc5b0433db941a0991bd7afe3702&type=2#UbuntuNerdFont-Regular SDF");
    -unity-font-style: normal;
}

.main-button {
    width: 156px;
    height: 156px;
    border-top-left-radius: 40%;
    border-top-right-radius: 40%;
    border-bottom-right-radius: 40%;
    border-bottom-left-radius: 40%;
    font-size: 40px;
    background-color: rgb(239, 241, 245);
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    border-left-color: rgb(204, 208, 218);
    border-right-color: rgb(204, 208, 218);
    border-top-color: rgb(204, 208, 218);
    border-bottom-color: rgb(204, 208, 218);
    color: rgb(76, 79, 105);
    -unity-font-style: bold;
    -unity-background-scale-mode: scale-to-fit;
}

.topleft {
    justify-content: space-between;
    align-items: flex-start;
    margin-top: 0;
    margin-left: 0;
    margin-right: 0;
    margin-bottom: 0;
    padding-top: 40px;
    padding-left: 40px;
}

.topright {
    align-items: flex-end;
    height: 100%;
    margin-top: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 0;
    padding-top: 40px;
    padding-right: 40px;
    padding-bottom: 0;
    padding-left: 0;
}

.top {
    max-height: 390px;
    flex-direction: row;
}

.bottom {
    flex-direction: column-reverse;
}

.item {
    width: 130px;
    height: 130px;
    background-color: rgb(188, 192, 204);
    margin-top: 10px;
    margin-right: 10px;
    margin-bottom: 10px;
    margin-left: 10px;
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    font-size: 30px;
}

.main-button:focus {
    scale: 1.3 1.3;
    background-color: rgb(229, 200, 144);
    transition-duration: 0.5s, 0.2s;
    transition-timing-function: ease-out-elastic, linear;
    transition-property: scale, background-color;
}

.arrowbox {
    flex-grow: 1;
    height: 34px;
    max-height: 34px;
    background-color: rgba(255, 255, 255, 0);
    flex-direction: column;
    align-items: center;
    align-self: auto;
    width: 90%;
    border-top-left-radius: 70px;
    border-top-right-radius: 70px;
    justify-content: flex-end;
}

.arrow {
    width: 100%;
    height: 100%;
    background-color: rgba(188, 188, 188, 0);
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    -unity-background-scale-mode: scale-to-fit;
}

.inv_shop_button {
    margin-top: 30px;
    margin-right: 30px;
    margin-bottom: 30px;
    margin-left: 30px;
    background-color: rgb(172, 176, 190);
    padding-top: 0;
    padding-right: 0;
    padding-bottom: 0;
    padding-left: 0;
    font-size: 50px;
    -unity-font-style: bold;
    width: 320px;
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    border-bottom-right-radius: 20px;
    border-bottom-left-radius: 20px;
}

.inv_shop_button:focus {
    transition-duration: 0.3s;
    transition-timing-function: ease-out-elastic;
    transform-origin: center;
    scale: 1.1 1.1;
}

.inv_popout {
    flex-grow: 1;
    position: absolute;
    width: 100%;
    height: 55%;
    bottom: 0;
    border-top-left-radius: 40px;
    border-top-right-radius: 40px;
    background-color: rgb(239, 241, 245);
    translate: 0% 100%;
    transition-timing-function: ease-out;
    transition-duration: 0.5s;
}

.inv_popout_up {
    translate: 0% 0%;
}

.scrim {
    flex-grow: 1;
    background-color: rgba(0, 0, 0, 0.76);
    opacity: 0;
    transition-duration: 0.25s;
    scale: 1.5 1.5;
}

.scrim_faded {
    opacity: 1;
}

.person {
    width: 52%;
    height: 70%;
    position: absolute;
    top: 15%;
    left: 2%;
    translate: -104% 0%;
    transition-timing-function: ease-out-sine;
    transition-duration: 0.5s;
}

.person_right {
    translate: 0% 0%;
}

.person_speak {
    translate: 0% -2%;
}

.explanation {
    flex-grow: 1;
    position: absolute;
    background-color: rgb(239, 241, 245);
    width: 700px;
    height: 300px;
    align-self: flex-start;
    right: 7%;
    top: 18%;
    border-top-left-radius: 60px;
    border-top-right-radius: 60px;
    border-bottom-right-radius: 60px;
    border-bottom-left-radius: 60px;
    align-items: center;
    justify-content: center;
    translate: 111% 0%;
    transition-duration: 0.5s;
    transition-timing-function: ease-out-sine;
}

.explaination_left {
    translate: 0% 0%;
}

.person_img {
    flex-grow: 1;
    background-image: url("project://database/Assets/UI/images/lagom-trainer.png?fileID=2800000&guid=b07ffba43dc3cd146bb7cfb0de00d84f&type=3#lagom-trainer");
    -unity-background-scale-mode: scale-to-fit;
    width: 100%;
    height: 90%;
    max-height: 90%;
    transition-duration: 0.1s;
    transition-property: all;
    transition-timing-function: ease;
    transition-delay: 0s;
    translate: 0% 0%;
}

.person_img_speak {
    translate: 0% -2%;
}

.arrow:active {
    transition-timing-function: ease-out-elastic;
    scale: 1.3 1.3;
    transition-duration: 0.3s;
}

.speaking {
    background-image: url("project://database/Assets/UI/images/icons8-mikrofon-96.png?fileID=2800000&guid=fd64b15a09f52f741a0d6e232069a7b7&type=3#icons8-mikrofon-96");
}

.notspeaking {
    background-image: url("project://database/Assets/UI/images/icons8-kein-mikrofon-96.png?fileID=2800000&guid=adb15c444a1d09f49bb1c6c6d0b8f485&type=3#icons8-kein-mikrofon-96");
}

.bubblebuttons {
    background-color: rgba(188, 188, 188, 0);
    -unity-font-style: bold;
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    font-size: 30px;
}

.bubblebuttons:focus {
    scale: 1.2 1.2;
    transition-property: scale;
    transition-timing-function: ease-out-elastic;
    transition-duration: 0.5s;
}

.info-scrim {
    flex-grow: 1;
    scale: 1.2 1.2;
    background-color: rgba(255, 230, 0, 0.49);
    display: none;
}

.info-scrim-blink {
    display: flex;
}
